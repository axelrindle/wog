doctype html
html(lang="en")
  head
    // Meta Tags for more compatibility.
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=0")
    meta(name="description" content="wog. A web interface for viewing logs. See https://github.com/axelrindle/wog")

    base(href=url)

    // Favicon
    link(rel="icon" href=path("img/favicon.png"))

    // Site title
    title #{title}

    // CSS files
    link(rel="stylesheet" href=path("css/style.min.css"))
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.8.2/css/all.css', integrity='sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay', crossorigin='anonymous')

  body(style="background-image: url(\"" + path("img/login_pattern.png") + "\")")

    // Page content
    block content

    // JS files
    block js
