extends layout.pug

block content

  // Content wrapper
  div.flex.no-justify#app

    img(src=path("img/header.png"), width="600px")

    // Login card
    div.card
      header.card-header
        p.card-header-title Login

      form(action=path("login"), method="POST")
        // Input items
        div.card-content

          // Username
          .field
            label.label Username
            .control.has-icons-left
              input.input(type="text", name="username", placeholder="Username",
                          v-model="username", required, value=messages.username ? messages.username[0] : "")
              span.icon.is-small.is-left
                i.fas.fa-user

          // Password
          .field
            label.label Password
            .control.has-icons-left
              input.input(type="password", name="password", placeholder="Password", v-model="password", required)
              span.icon.is-small.is-left
                i.fas.fa-key

          if error
            p.has-text-danger= error

        // Buttons
        footer.card-footer
          input.card-footer-item.has-background-success.has-text-white.pointer(type="submit", value="Login")
